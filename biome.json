{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": {
    "includes": ["**/*.{js,jsx,ts,tsx,json,jsonc}"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "lineEnding": "lf",
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
